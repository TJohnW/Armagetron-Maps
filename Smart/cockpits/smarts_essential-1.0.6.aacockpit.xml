<!-- label: time, fps, & ping -->
<Label camera="all" viewport="all" toggle="1" toggleSticky="true" toggleDefault="on">
	<Position x="0.80" y="0.46" />
	<Size height="0.06" width="0.025" />
	<DataSet id="hours">
		<AtomicData source="current_hours12h" minwidth="2" fill="0" />
	</DataSet>
	<DataSet id="minutes">
                <AtomicData source="current_minutes" minwidth="2" fill="0" />
	</DataSet>
	<DataSet id="seconds">
		<AtomicData source="current_seconds" minwidth="2" fill="0" />
	</DataSet>
	<DataSet id="ampm">
		<Conditional field="source" lvalue="current_hours" rvalue="12" operator="le">
			<IfTrue>
				<AtomicData source="AM"/>
			</IfTrue>
			<IfFalse>
				<AtomicData source="PM"/>
			</IfFalse>
		</Conditional>
	</DataSet>
	<DataSet id="ping">
		<AtomicData source="current_ping" />
	</DataSet>
            <Caption location="off">
                <Text value="Player Status" />
            </Caption>
	<DataSet id="FPS">
		<AtomicData source="current_framerate" />
	</DataSet>
	<DataSet id="currentplayer">
		<AtomicData source="current_colored_name" />
	</DataSet>
	<Face>
		<Table>
			<Row>
				<Cell>
					<GameData data="hours" />
					<Text value=":" />
					<GameData data="minutes" />
					<Text value="." />
					<GameData data="seconds" />
					<Text value=" " />
					<GameData data="ampm" />
				</Cell>
			</Row>
			<Row>
				<Cell>
					<Text value="0x333388Ping:0xffffff " />
					<GameData data="ping" />
				</Cell>
			</Row>
			<Row>
				<Cell>
					<GameData data="FPS" />
					<Text value=" 0x883333FPS" />
				</Cell>
			</Row>   
			<Row>
				<Cell>
					<Text value="0x338833Watching:0xffffff " />
					<GameData data="currentplayer" />
				</Cell>
			</Row>
		</Table>
	</Face>
</Label>
<!-- label: time, fps, & ping-->

<!-- label: name of player watched, time, & player speed -->
<Label camera="all" viewport="all" toggle="1" toggleSticky="true" toggleDefault="off">
	<Position x="0.80" y="0.46" />
	<Size height="0.04" width="0.02" />
	<DataSet id="hours">
		<AtomicData source="current_hours12h" minwidth="2" fill="0" />
	</DataSet>
	<DataSet id="minutes">
                <AtomicData source="current_minutes" minwidth="2" fill="0" />
	</DataSet>
	<DataSet id="seconds">
		<AtomicData source="current_seconds" minwidth="1" fill="0" />
	</DataSet>
	<DataSet id="ampm">
		<Conditional field="source" lvalue="current_hours" rvalue="12" operator="le">
			<IfTrue>
				<AtomicData source="AM"/>
			</IfTrue>
			<IfFalse>
				<AtomicData source="PM"/>
			</IfFalse>
		</Conditional>
	</DataSet>
	<DataSet id="currentplayer">
		<AtomicData source="current_colored_name" />
	</DataSet>
	<Face>
		<Table>
			<Row>
				<Cell>
					<GameData data="hours" />
					<Text value=":" />
					<GameData data="minutes" />
					<Text value="."/>
					<GameData data="seconds" />
					<Text value=" " />
					<GameData data="ampm" />
				</Cell>
			</Row>
			<Row>
				<Cell>
					<Text value="Watching: " />
					<GameData data="currentplayer" />
				</Cell>
			</Row>
		</Table>
	</Face>
</Label>
<!-- label: name of player watched, time, & player speed -->

